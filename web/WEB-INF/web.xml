<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>

    <display-name>Loginbuddy</display-name>

    <servlet>
        <servlet-name>Authorize</servlet-name>
        <servlet-class>net.loginbuddy.oauth.server.Authorize</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Callback</servlet-name>
        <servlet-class>net.loginbuddy.oauth.client.Callback</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginbuddyProvider</servlet-name>
        <servlet-class>net.loginbuddy.provider.LoginbuddyProvider</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginbuddyUserinfo</servlet-name>
        <servlet-class>net.loginbuddy.provider.LoginbuddyUserinfo</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Authorize</servlet-name>
        <url-pattern>/authorize</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Callback</servlet-name>
        <url-pattern>/callback</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>LoginbuddyProvider</servlet-name>
        <url-pattern>/demo/authorize</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginbuddyProvider</servlet-name>
        <url-pattern>/demo/token</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginbuddyUserinfo</servlet-name>
        <url-pattern>/demo/userinfo</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>/index.html</welcome-file>
    </welcome-file-list>

    <resource-env-ref>
        <description>Object factory for ConfigUtil instances</description>
        <resource-env-ref-name>bean/ConfigUtilFactory</resource-env-ref-name>
        <resource-env-ref-type>net.loginbuddy.config.ConfigUtil</resource-env-ref-type>
    </resource-env-ref>

    <resource-env-ref>
        <description>Object factory for Cache instances</description>
        <resource-env-ref-name>bean/CacheFactory</resource-env-ref-name>
        <resource-env-ref-type>net.loginbuddy.cache.Cache</resource-env-ref-type>
    </resource-env-ref>

    <security-constraint>
        <display-name>Security for Loginbuddy configuration</display-name>
        <web-resource-collection>
            <web-resource-name>config.json</web-resource-name>
            <url-pattern>/config/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>admin</role-name>
        </auth-constraint>
    </security-constraint>

    <security-role>
        <role-name>admin</role-name>
    </security-role>

</web-app>
